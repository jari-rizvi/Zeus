<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/card_background"
        android:elevation="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout11"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/back"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/ProductName"
            style="@style/noah_secondary_bold_large"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Coffe"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/orderId"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout11"
            app:layout_constraintTop_toBottomOf="@+id/orderId" />

        <TextView
            android:id="@+id/ProductCate"
            style="@style/secondary_manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductName"
            android:layout_marginTop="4dp"
            android:text="Black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/ProductName"
            app:layout_constraintTop_toBottomOf="@+id/ProductName" />

        <TextView
            android:id="@+id/orderQty"
            style="@style/secondary_manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductCate"
            android:maxLines="1"
            android:text="Qty: 1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ProductCate"
            app:layout_constraintTop_toBottomOf="@+id/ProductCate" />

        <TextView
            android:id="@+id/orderPrice"
            style="@style/noah_secondary_bold_medium_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderQty"
            android:layout_marginTop="@dimen/_4sdp"
            android:maxLines="1"
            android:text="AED 1.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/orderType"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/orderQty"
            app:layout_constraintTop_toBottomOf="@+id/orderQty"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/orderId"
            style="@style/secondary_manrope_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:text="order id # 1234"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orderType"
            style="@style/noah_regular_normal_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Picked on Arrival"
            app:layout_constraintBottom_toBottomOf="@+id/orderPrice"
            app:layout_constraintEnd_toEndOf="@+id/orderId"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ProductName"
            app:layout_constraintTop_toTopOf="@+id/orderPrice"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>