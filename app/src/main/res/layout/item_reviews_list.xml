<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notificationImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:src="@drawable/dummyimg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="5dp">

            <LinearLayout
                android:id="@+id/lnRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/userName"
                    style="@style/manrope_semi_bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="103dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Lorem " />

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/ratingBarColor"
                    app:mrb_progressTint="@color/ratingBarColor" />

            </LinearLayout>

           <TextView
                android:id="@+id/userReview"
                style="@style/secondary_manrope_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnRating"
                android:layout_marginEnd="103dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10sdp"
                android:text="2 days ago" />

            <TextView
                android:id="@+id/tvDes"
                style="@style/noah_regular_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userReview"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingEnd="@dimen/_10sdp"
                android:text="I can’t say enough about this place. The batista’s coffee and it shows." />


        </RelativeLayout>

    </LinearLayout>
</layout>
