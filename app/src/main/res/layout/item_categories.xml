<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_63sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/item_background"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/checkedTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="false"
            android:background="@drawable/checked_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/categoryImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="8dp"
            android:paddingStart="@dimen/_3sdp"
            android:src="@drawable/ic_resturant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckedTextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:checked="false"
            android:paddingEnd="@dimen/_2sdp"
            android:elevation="@dimen/_4sdp"
            android:text="Resturant"
            android:textColor="@color/item_text_selector"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="@+id/categoryImage"
            app:layout_constraintStart_toEndOf="@+id/categoryImage"
            app:layout_constraintTop_toTopOf="@+id/categoryImage"
            app:layout_constraintVertical_bias="0.666" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>