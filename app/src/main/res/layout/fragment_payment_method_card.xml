<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">


            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/back" />

            <TextView
                style="@style/noah_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnBack"
                android:gravity="center"
                android:text="@string/payment_method" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/card" />

        <TextView
            style="@style/noah_secondary_bold_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="@string/name_of_card" />

        <EditText
            android:id="@+id/cardName"
            style="@style/noah_light_medium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/card_background"
            android:elevation="1dp"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="10dp"
            android:textCursorDrawable="@color/black" />


        <TextView
            style="@style/noah_secondary_bold_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="@string/card_number" />

        <EditText
            android:id="@+id/cardNumber"
            style="@style/noah_light_medium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/card_background"
            android:elevation="1dp"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:padding="10dp"
            android:textCursorDrawable="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">


            <TextView
                android:id="@+id/expiryDate"
                style="@style/noah_secondary_bold_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="@string/expiry_date" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/expiryDate"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/card_background"
                android:elevation="1dp">

                <Spinner
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="10dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/cvv"
                style="@style/noah_secondary_bold_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="115dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="CVV" />

            <EditText
                android:id="@+id/etCvv"
                style="@style/noah_light_medium"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/cvv"
                android:layout_alignStart="@+id/cvv"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:maxLines="1"
                android:padding="10dp"
                android:textCursorDrawable="@color/black" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:elevation="1dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp">

            <TextView
                style="@style/noah_light_white_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gredient"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/add" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>