<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zues_bg">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:src="@drawable/back_white" />


        <TextView
            android:id="@+id/tvProfile"
            style="@style/title_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white" />


        <androidx.cardview.widget.CardView
            android:id="@+id/rlCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tvProfile"
            android:elevation="1dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_edit"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_10sdp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_background"
                    android:padding="2dp"
                    android:src="@drawable/dummyimg" />

                <TextView
                    style="@style/ubuntu_medium_medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:text="Jenny williams" />

                <TextView
                    style="@style/secondary_light_small"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:text="+971 7547477474" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_below="@+id/rlCard"
                android:layout_width="match_parent"
                android:layout_marginTop="-40dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_top_round_fill_white">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgOrder"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:text="@string/order_history" />


                            <ImageView
                                android:id="@+id/imgOrder"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_5sdp"

                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_order_history" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView

                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgAddress"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:text="@string/address" />


                            <ImageView
                                android:id="@+id/imgAddress"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_address" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                android:id="@+id/Payment"
                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgPayment"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:text="@string/payment_method" />


                            <ImageView
                                android:id="@+id/imgPayment"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_payment_method" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgCoupons"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:text="@string/coupons" />


                            <ImageView
                                android:id="@+id/imgCoupons"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:src="@drawable/ic_coupouns" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                android:id="@+id/Reward"
                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgReward"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:text="@string/reward" />


                            <ImageView
                                android:id="@+id/imgReward"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_reward" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView

                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgSettings"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:text="@string/settings" />


                            <ImageView
                                android:id="@+id/imgSettings"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_settings" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgSupport"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:text="@string/support" />


                            <ImageView
                                android:id="@+id/imgSupport"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:src="@drawable/ic_support" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="5dp"
                        android:elevation="1dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                style="@style/ubuntu_medium_medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/imgLogout"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:text="@string/logout" />


                            <ImageView
                                android:id="@+id/imgLogout"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:src="@drawable/ic_logout" />
                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </ScrollView>


            </RelativeLayout>

        </RelativeLayout>




</layout>