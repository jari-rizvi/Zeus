<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zues_bg">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:padding="5dp"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/tvProfile"
            style="@style/title_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white" />

        <androidx.cardview.widget.CardView
            android:id="@+id/rlCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProfile"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:elevation="1dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_edit" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_background"
                    android:padding="2dp"
                    android:src="@drawable/dummyimg" />

                <TextView
                    style="@style/noah_regular_bold_black_large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:text="Jenny williams" />

                <TextView
                    style="@style/secondary_light_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="+971 7547477474" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlCard"
            android:layout_marginTop="-40dp"
            android:background="@drawable/shape_top_round_fill_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnOrderHistory"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_order_history"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="@dimen/_1sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/order_history" />

                <TextView
                    android:id="@+id/btnAddress"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_address"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/address" />

                <TextView
                    android:id="@+id/btnPaymentMethod"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_payment_method"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/payment_method" />

                <TextView
                    android:id="@+id/btnCoupons"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_coupouns"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/coupons" />

                <TextView
                    android:id="@+id/btnReward"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_reward"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/reward" />

                <TextView
                    android:id="@+id/btnSettings"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_settings"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/settings" />

                <TextView
                    android:id="@+id/btnSupport"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_support"
                    android:drawablePadding="@dimen/_10sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/support" />

                <TextView
                    android:id="@+id/btnLogout"
                    style="@style/secondary_regular_medium_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/item_background"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="1dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/logout" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>


</layout>