<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zues_bg">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:padding="5dp"
            android:src="@drawable/back_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvProfile"
            style="@style/title_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/topLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            app:layout_constraintTop_toBottomOf="@+id/btnBack"
            app:layout_constraintVertical_bias="0.269" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/card_background"
            android:elevation="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@+id/parentlayout"
            app:layout_constraintBottom_toTopOf="@+id/parentlayout">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicture"
                android:layout_width="@dimen/_51sdp"
                android:layout_height="@dimen/_51sdp"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_13sdp"
                android:background="@drawable/border_background"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView47"
                style="@style/noah_regular_bold_black_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Jenny williams"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/secondary_light_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/_5sdp"
                android:text="+971 7547477474"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView47"
                app:layout_constraintVertical_bias="0.272" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_430sdp"
            android:background="@drawable/shape_top_round_fill_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/btnOrderHistory"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_order_history"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="@dimen/_1sdp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/order_history"
                app:layout_constraintBottom_toTopOf="@+id/btnAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.82" />

            <TextView
                android:id="@+id/btnAddress"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/address"
                app:layout_constraintBottom_toTopOf="@+id/btnPaymentMethod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnPaymentMethod"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_payment_method"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/payment_method"
                app:layout_constraintBottom_toTopOf="@+id/btnCoupons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnCoupons"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_coupouns"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/coupons"
                app:layout_constraintBottom_toTopOf="@+id/btnReward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnReward"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_reward"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/reward"
                app:layout_constraintBottom_toTopOf="@+id/btnSettings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnSettings"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/settings"
                app:layout_constraintBottom_toTopOf="@+id/btnSupport"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/btnSupport"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_support"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/support"
                app:layout_constraintBottom_toTopOf="@+id/btnLogout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btnLogout"
                style="@style/secondary_regular_medium_bold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/item_background"
                android:drawableLeft="@drawable/ic_logout"
                android:drawablePadding="@dimen/_10sdp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="@string/logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.885" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>